{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 450,
    "height": 200,
    "title": "Age vs final worth",
    "data": {
        "url": "https://raw.githubusercontent.com/MichaellaCKS/FIT3179Assignment2/main/js/billionaires.csv"
    },
    "mark": "line",
    "encoding": {
        "x": {
            "field": "age",
            "type": "quantitative",
            "title": "Age",
            "scale": { "domain": [20, 100] }
        },
        "y": {
            "field": "finalWorth",
            "type": "quantitative",
            "title": "Worth in billions (USD)"
        },
        "color": {
            "field": "gender",
            "type": "nominal",
            "scale": {
                "domain": ["M", "F"],
                "range": ["#00a6ed", "#fc6e32"]
            },
            "title": "Worth in billions (USD)",
            "legend": { "orient": "top" }
        }

    }
}