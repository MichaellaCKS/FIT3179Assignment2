{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Age vs final worth",
    "data": {
        "url": "billionaires.csv"
    },
    "mark": "line",
    "encoding": {
        "x": {
            "field": "age",
            "type": "quantitative",
            "title": "Age"
        },
        "y": {
            "field": "finalWorth",
            "type": "quantitative",
            "title": "Worth in billions (USD)"
        },
        "color": {
            "field": "gender",
            "type": "nominal",
            "title": "Worth in billions (USD)"
        }
    }
}